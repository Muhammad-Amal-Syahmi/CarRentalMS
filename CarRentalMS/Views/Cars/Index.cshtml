@*@model IEnumerable<CarRentalMS.DataAcess.Car>*@
@model IEnumerable<CarRentalMS.ViewModels.CarViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="page-title">List of Cars</h2>
@Html.ActionLink("Add Car", "Create", "Cars", new { area = "" }, new { @class = "btn btn-primary btn-add-car float-right" })

<table id="table_id" class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Id")
            </th>
            <th>
                @Html.DisplayName("Car Model")
            </th>
            <th>
                @Html.DisplayName("Pickup Location")
            <th>
                Options
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {
                <tr class="">
                    <td style="width: 7%">
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarModel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td style="width: 23%">
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-options" })
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-options" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-options" })
                    </td>
                </tr>
            }
        }
    </tbody>

</table>

<script>

    $('#table_id').dataTable({});


</script>
